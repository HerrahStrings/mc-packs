{
    "name": "hidden phasing powers",
    "description": "phasing, resource up, resource down, translucency, overlay, undead, hungry, gapple reset, stuck when phased.",
    "hidden": true,
    "type": "origins:multiple",
    "phasink": {
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:phasing",
        "block_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "origins:unphasable"
        },
        "render_type": "blindness",
        "view_distance": 10,
        "phase_down_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:on_block"
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        }
    },
    "radd": {
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "pplus:pbar",
            "change": 3,
            "operation": "add"
        },
        "rising_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.player.breath",
            "volume": 1,
            "pitch": 1
        }
    },
    "rminus": {
        "name": "less bar",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:power_active",
                    "power": "pplus:phantomize"
                },
                {
                    "inverted": true,
                    "type": "origins:status_effect",
                    "effect": "minecraft:absorption"
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 3,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "pplus:pbar",
            "change": -2,
            "operation": "add"
        }
    },
    "translucency": {
        "name": "alpha",
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:model_color",
        "red": 1,
        "green": 1,
        "blue": 1,
        "alpha": 0.5
    },
    "overlay": {
        "name": "burple",
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:overlay",
        "texture": "minecraft:textures/misc/nausea.png",
        "strength": 0.5,
        "red": 0.5,
        "green": 0.25,
        "blue": 0.5,
        "draw_mode": "nausea",
        "draw_phase": "below_hud",
        "hide_with_hud": true,
        "visible_in_third_person": true
    },
    "undead": {
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:entity_group",
        "group": "undead"
    },
    "hungy": {
        "condition": {
            "type": "origins:power_active",
            "power": "pplus:phantomize"
        },
        "type": "origins:modify_exhaustion",
        "modifier": {
            "operation": "multiply_total",
            "value": 2
        }
    },
    "gapple": {
        "name": "golden apples reset",
        "description": "the p-bar (it's just what I named it, don't be weird)",
        "type": "origins:modify_food",
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:golden_apple"
            }
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "pplus:pbar",
            "change": -240,
            "operation": "add"
        },
        "always_edible": true
    },
    "spawnreset": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_respawned": {
            "type": "origins:change_resource",
            "resource": "pplus:pbar",
            "change": 0,
            "operation": "set"
        }
    },
    "pbreakspeed": {
        "name": "halved break speed",
        "condition": {
            "type": "origins:in_block_anywhere",
            "comparison": ">=",
            "compare_to": 1
        },
		"block_condition": {
            "type": "origins:constant",
            "value": true
        },
        "type": "origins:modify_break_speed",
        "modifier": {
            "operation": "multiply_total",
            "value": -0.5
        }
    }
}